{
  "manifest_version": 3,
  "name": "Tab Timer",
  "version": "1.0",
  "description": "Track time spent on browser tabs",
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/timer.png",
    "128": "icons/timer.png"
  }
}